---
import { Icon } from "astro-icon/components";

import cn from "@/shared/lib/cn";
import type { Skill } from "../model/type";

interface Props {
  skill: Skill;
  containerClassName?: string;
}

const { skill, containerClassName } = Astro.props;
---

<div class={cn("flex flex-row items-center gap-5", containerClassName)}>
  <Icon name={skill.icon.name} class="text-2xl text-white md:text-4xl" />
  <span class="text-xl font-bold text-white md:text-2xl">{skill.name}</span>
</div>
