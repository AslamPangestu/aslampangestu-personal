---
import type { BaseBlog } from "@/entities/blog/model/type";
import BlogItem from "@/entities/blog/ui/BlogItem.astro";

interface Props {
  data: BaseBlog[];
}

const { data } = Astro.props;
---

<section
  class="container mx-auto mb-12 flex w-full flex-col gap-8 px-6 md:px-8"
>
  <div class="flex flex-col items-center justify-between gap-5 md:flex-row">
    <h2
      class="text-on-surface dark:text-surface text-2xl font-black uppercase md:basis-1/2 md:text-4xl"
    >
      Highlighted Blogs
    </h2>
    <p
      class="text-on-surface-secondary dark:text-surface max-w-5xl text-sm md:basis-1/2 md:text-xl"
    >
      A selection of my latest and most popular blog posts, covering topics from
      software architecture to productivity tips.
    </p>
  </div>
  <div class="grid w-full grid-cols-1 gap-5 md:grid-cols-2">
    {data.map((item) => <BlogItem {...item} />)}
  </div>
</section>
