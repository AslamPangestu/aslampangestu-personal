---
import { Image } from "astro:assets";

import type { BlockContent } from "@/entities/blockContent/model/type";
import type { Contact } from "@/entities/contact/model/type";
import ContactIcon from "@/entities/contact/ui/ContactIcon.astro";

import DecorativeIcon from "@/shared/assets/line.svg";

interface Props {
  data: BlockContent;
  contacts: Contact[];
}

const { data, contacts } = Astro.props;

const title = data.content?.[0].value;
const subtitle = data.content?.[1].value;
const description = data.content?.[2].value;
const profile = data.content?.[3].value;
---

<section
  class="container mx-auto my-24 flex h-screen max-h-[1000px] min-h-[620px] w-full flex-col items-start gap-20 px-6 md:flex-row md:items-center md:px-8"
>
  <div class="order-2 flex flex-col justify-between md:order-1 md:basis-1/2">
    <div class="flex flex-col gap-5">
      <div class="flex flex-row gap-4">
        <span
          class="text-on-surface-secondary dark:text-surface text-base font-light md:text-2xl"
          >{subtitle}</span
        >
        <Image src={DecorativeIcon} alt="about me decorative" />
      </div>
      <h2
        class="text-on-surface dark:text-surface text-2xl font-black uppercase md:text-5xl"
      >
        {title}
      </h2>
      <p class="text-on-surface-secondary dark:text-surface text-sm md:text-xl">
        {description}
      </p>
    </div>
    <div class="mt-12 flex flex-col gap-4">
      <span class="text-on-surface dark:text-surface text-xl font-medium"
        >Letâ€™s connect:</span
      >
      <div class="flex flex-row">
        {
          contacts.map((contact) => (
            <div class="border-on-surface-secondary dark:border-surface border-r px-6 first:pl-0 last:border-r-0 last:pr-0">
              <ContactIcon {...contact} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
  <div
    class="order-1 flex h-full w-full flex-col items-center md:order-2 md:h-3/4 md:basis-1/2"
  >
    <div class="relative h-full w-[300px] md:w-full">
      <div class="bg-primary absolute inset-x-0 top-0 h-[55%] rounded-[32px]">
      </div>
      <div
        class="bg-surface absolute inset-x-0 top-6 bottom-0 mx-auto w-[92%] overflow-hidden rounded-4xl p-2"
      >
        {
          profile && (
            <Image
              src={profile}
              alt="profile"
              inferSize
              class="h-full rounded-4xl object-cover"
            />
          )
        }
      </div>
    </div>
  </div>
</section>
