---
interface Action {
  label: string;
  href: string;
}

interface Props {
  title: string;
  subtitle: string;
  description: string;
  action: Action;
}

const { title, subtitle, description, action } = Astro.props;
---

<section
  class="container w-full mx-auto flex flex-col gap-8 items-center px-6 md:px-8"
>
  <div class="flex flex-col md:flex-row gap-5 justify-between">
    <div class="md:basis-1/2 flex flex-col gap-5">
      <div class="flex flex-row gap-4">
        <span class="text-on-surface-secondary font-light text-base md:text-2xl"
          >{title}</span
        >
        <span>Icon</span>
      </div>
      <h2 class="uppercase font-black text-on-surface text-2xl md:text-5xl">
        {subtitle}
      </h2>
    </div>
    <p class="md:basis-1/2 text-on-surface-secondary text-sm md:text-xl">
      {description}
    </p>
  </div>
  <slot />
  <button>Action</button>
</section>
