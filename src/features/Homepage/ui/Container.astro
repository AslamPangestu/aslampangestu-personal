---
import type { BlockContent } from "@/entities/page/model/type";

import Button from "@/shared/ui/Button/index.astro";

interface Action {
  label: string;
  href: string;
}

type BaseProps = Pick<BlockContent, "title" | "subtitle" | "description">;

interface Props extends BaseProps {
  action: Action;
}

const { title, subtitle, description, action } = Astro.props;
---

<section
  class="container mx-auto mb-24 flex w-full flex-col items-center gap-8 px-6 md:px-8"
>
  <div class="flex flex-col justify-between gap-5 md:flex-row">
    <div class="flex flex-col gap-5 md:basis-1/2">
      <div class="flex flex-row gap-4">
        <span
          class="text-on-surface-secondary dark:text-surface text-base font-light md:text-2xl"
          >{subtitle}</span
        >
        <span>Icon</span>
      </div>
      <h2
        class="text-on-surface dark:text-surface text-2xl font-black uppercase md:text-5xl"
      >
        {title}
      </h2>
    </div>
    <p
      class="text-on-surface-secondary dark:text-surface text-sm md:basis-1/2 md:text-xl"
    >
      {description}
    </p>
  </div>
  <slot />
  <Button
    label={action.label}
    href={action.href}
    rounded
    color="primary"
    icon="A"
  />
</section>
