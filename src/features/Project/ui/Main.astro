---
import type { BlockContent } from "@/entities/blockContent/model/type";
import type { Project } from "@/entities/project/model/type";
import type { Role } from "@/entities/role/model/type";
import Projects from "@/entities/project/ui/Projects.svelte";

interface Props {
  data: BlockContent;
  projects: Project[];
  roles: Role[];
}

// eslint-disable-next-line @typescript-eslint/no-unused-vars
const { data, projects, roles } = Astro.props;

const title = data.content?.[0].value;
const description = data.content?.[1].value;
---

<section
  class="container mx-auto mb-12 flex w-full flex-col gap-8 px-6 md:px-8"
>
  <div class="flex flex-col items-center justify-between gap-5 lg:flex-row">
    <div class="flex flex-row gap-5 lg:basis-1/2 lg:flex-col">
      <h2
        class="text-on-surface dark:text-surface text-2xl font-black uppercase md:text-4xl"
      >
        {title}
      </h2>
      <p
        class="text-on-surface-secondary dark:text-surface max-w-5xl text-sm md:text-xl"
      >
        {description}
      </p>
    </div>
    <!-- TODO: Phase 2 - Implement Filter -->
    <!-- <div
      class="flex w-full flex-row justify-start gap-5 lg:basis-1/2 lg:justify-end"
    >
      {roles.map((role) => <span>{role.title}</span>)}
    </div> -->
  </div>
  <Projects projects={projects} client:visible />
</section>
