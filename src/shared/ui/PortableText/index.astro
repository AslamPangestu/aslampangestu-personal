---
import { PortableText } from "astro-portabletext";

import H1 from "./H1.astro";
import H2 from "./H2.astro";
import H3 from "./H3.astro";
import H4 from "./H4.astro";
import H5 from "./H5.astro";
import H6 from "./H6.astro";
import Paragraph from "./Paragraph.astro";
import Blockquote from "./Blockquote.astro";
import BulletList from "./BulletList.astro";
import NumberList from "./NumberList.astro";
import Link from "./Link.astro";
import Strong from "./Strong.astro";
import Em from "./Em.astro";
import Code from "./Code.astro";
import Underline from "./Underline.astro";
import StrikeThrough from "./StrikeThrough.astro";
import Image from "./Image.astro";

const { value } = Astro.props;

const components = {
  block: {
    normal: Paragraph,
    h1: H1,
    h2: H2,
    h3: H3,
    h4: H4,
    h5: H5,
    h6: H6,
    blockquote: Blockquote,
  },
  list: {
    bullet: BulletList,
    number: NumberList,
  },
  mark: {
    link: Link,
    strong: Strong,
    em: Em,
    code: Code,
    underline: Underline,
    "strike-through": StrikeThrough,
  },
  type: {
    image: Image,
  },
};
---

<PortableText value={value} components={components} />
