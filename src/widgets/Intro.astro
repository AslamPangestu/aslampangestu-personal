---
import type { BlockContent } from "@/entities/blockContent/model/type";

interface Props {
  data: BlockContent;
}

const { data } = Astro.props;

const title = data.content?.[0].value;
const description = data.content?.[1].value;
---

<section
  class="container mx-auto mt-32 mb-12 flex w-full flex-col gap-5 px-6 md:px-8"
>
  <h1
    class="text-on-surface dark:text-surface text-2xl font-black uppercase md:text-4xl"
  >
    {title}
  </h1>
  <p
    class="text-on-surface-secondary dark:text-surface max-w-5xl text-sm md:text-xl"
  >
    {description}
  </p>
</section>
